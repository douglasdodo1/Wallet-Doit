generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  cpf       String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String  
  phone     String
  account   Account? @relation(fields:[accountId], references: [id])
  accountId Int? @unique
}

model Account {
  id       Int   @id @default(autoincrement())
  sale     Float
  credit   Float
  credit_used   Float
  User User? @relation
  paymentList PaymentList? @relation(fields: [paymentListId], references: [id])
  paymentListId Int? @unique
  mouthPayment MouthPayment @relation(fields: [mouthPaymentId], references: [id])
  mouthPaymentId Int @unique
}

model PaymentList {
  id           Int          @id @default(autoincrement())
  name_payment String @unique
  value       Float
  account Account? @relation
}

model MouthPayment {
  id           Int          @id @default(autoincrement())
  name String 
  value       Float
  account Account? @relation
  mouthPayment weekPayment? @relation(fields:[weekPaymentId], references: [id])
  weekPaymentId Int @unique
}

model weekPayment {
  id          Int          @id @default(autoincrement())
  week        String 
  value       Float
  mouthPayment MouthPayment? @relation()
}

